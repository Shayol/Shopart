<h1>Sticks</h1>

<% @sticks.each do |stick| %>
  <ul>
    <li>
      <%= stick.name %>
      <%= "Price: #{number_to_currency stick.price}" %>
        <%= form_for :order_item, url: shopart.order_items_path, method: :post, class: "form-inline" do |f| %>
          <div class="col-md-6">
            <%= f.number_field :quantity, value: 1, within: 1..100, class: "form-control addBook_quantity" %>
          </div>
            <%= f.hidden_field :product_type, value: "Stick" %>
            <%= f.hidden_field :product_id, value: stick.id %>
          <div class="col-md-3">
            <%= f.submit "ADD ITEM", class: "btn btn-info"%>
          </div>
        <% end %>
    </li>
  </ul>
<% end %>

